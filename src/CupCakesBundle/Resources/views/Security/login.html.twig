{% trans_default_domain 'FOSUserBundle' %}
{% extends "::base.html.twig" %}
{% block fos_user_content %}
    {% if error %}
        <div>{{ error.messageKey|trans(error.messageData, 'security') }}</div>
    {% endif %}
<div class="login">

    <form action="{{ path("fos_user_security_check") }}" method="post" id="sign_in">
        <input type="hidden" name="_csrf_token" value="{{ csrf_token }}" />
            <div class="msg">Connecter Vous a votre compte</div>
            <form>
                <div class="input-group">
                    <div class="form-line">
                        <label for="username">{{ 'security.login.username'|trans }}</label>
                    </div>
                    <div class="form-line">
                        <input type="text"  class="form-control" id="username" name="_username" value="{{ last_username }}" required="required" />
                    </div>
                </div>
                <div class="input-group">
                    <div class="form-line">
                        <label for="password">{{ 'security.login.password'|trans }}</label>
                    </div>
                    <div class="form-line">
                        <input type="password" class="form-control"  id="password" name="_password" required="required" />
                    </div>
                </div>
                <div class="row">
                    <div class="col-xs-8 p-t-5">
                        <input type="checkbox" class="filled-in chk-col-pink" id="remember_me" name="_remember_me" value="on" />
                        <label for="remember_me">{{ 'security.login.remember_me'|trans }}</label>
                    </div>
                    <div class="col-xs-4">
                        <input type="submit" class="btn btn-block bg-pink waves-effect"  id="_submit" name="_submit" value="{{ 'security.login.submit'|trans }}" />
                    </div>
                </div>
            </form>
        <div class="row m-t-15 m-b--20">
            <div class="col-xs-6">
                <a href="{{ path('fos_user_registration_register') }}">Inscrivez vous</a>
            </div>
            <div class="col-xs-6 align-right">
                <a href="{{ path('fos_user_resetting_request') }}">Mot de passe oublier</a>
            </div>
        </div>
    </form>
</div>
{% endblock fos_user_content %}
